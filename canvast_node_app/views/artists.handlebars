<html>
    {{#each foo}}
    {{this}}
    {{/each}}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="../index.html">Canvast</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="../paintings">Paintings</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../artists">Artists</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../galleries">Galleries</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../mediums">Mediums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="../categories">Categories</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="m-5">
        <h3>Add new artist:</h3>
        <form id="addartist" action="/artists" method="post">
            <div class="form-group m-3">
                <div class="form-row">
                    <label class="mr-3" for="exampleFormControlInput3">First name</label> 
                    <input class="form-control w-25" id="exampleFormControlInput1" type="text" name="first_name"><br>
                </div>
                <div class="form-row">
                    <label class="mr-3" for="exampleFormControlInput3">Last name</label> 
                    <input class="form-control w-25" id="exampleFormControlInput1" type="text" name="last_name"><br>
                </div>
                <div class="form-row">
                    <label class="mr-3" for="exampleFormControlInput3">Year born</label> 
                    <input class="form-control w-25" id="exampleFormControlInput1" type="text" name="year_born"><br>
                </div>
                <div class="form-row">
                    <label class="mr-3" for="exampleFormControlInput3">Year deceased</label> 
                    <input class="form-control w-25" id="exampleFormControlInput1" type="text" name="year_deceased"><br>
                </div>
                <input type="submit" value="Submit" class="btn btn-primary">
            </div>
        </form>
        <br/> 

        <h3>Current artists:</h3>
        <table class="table">
            <thead> 
                <th scope="col">Id</th>
                <th scope="col">First name</th> 
                <th scope="col">Last name</th> 
                <th scope="col">Year born</th>
                <th scope="col">Year deceased</th>
            </thead> 
            <tbody>
                {{#each artists}} 
                <tr scope="row"> 
                    <td>{{id}}</td>
                    <td>{{first_name}}</td> 
                    <td>{{last_name}}</td> 
                    <td>{{year_born}}</td>
                    <td>{{year_deceased}}</td>
                </tr> 
                {{/each}} 
            </tbody> 
        </table> 
    </div>
</html>